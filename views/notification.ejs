<% include header %>

<div id = "notifydiv" style = "position:relative;top:250px;left:100px">
<form id = "notification" onsubmit = "return false">
	<textarea name = "text" id = "text" rows = "2" cols = "100"></textarea><br>
	<input type = "submit" value = "Submit Notification">
</form>
</div>
</body>
<script src="/socket.io/socket.io.js"></script>
<script>
var nsp = io.connect('/admin');

var notify = document.getElementById('notifydiv');
notify.addEventListener("submit", function(){
	var N = document.getElementById('text').value;
	console.log(N);
	nsp.emit('notification', N);

});
</script>
